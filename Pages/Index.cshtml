<section class="contact-section section-padding" id="section_5">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <em class="text-white">Saludanos</em>
                <h2 class="text-white mb-4 pb-lg-2">Contacto</h2>
            </div>

            <div class="col-lg-6 col-12">
                <form action="#" method="post" class="custom-form contact-form" role="form">

                    <div class="row">

                        <div class="col-lg-6 col-12">
                            <label for="name" class="form-label">Nombre <sup class="text-danger">*</sup></label>

                            <input type="text" name="name" id="name" class="form-control" placeholder="Pedro" required="">
                        </div>

                        <div class="col-lg-6 col-12">
                            <label for="email" class="form-label">Correo Electronico </label>

                            <input type="email" name="email" id="email" pattern="[^ ]*[^ ]*" class="form-control" placeholder="pedro@gmail.com" required="">
                        </div>

                        <div class="col-12">
                            <label for="message" class="form-label">¿Comó te ayudamos? </label>

                            <textarea name="message" rows="4" class="form-control" id="message" placeholder="Mensaje" required=""></textarea>

                        </div>
                    </div>

                    <div class="col-lg-5 col-12 mx-auto mt-3">
                        <button type="submit" class="form-control">Enviar</button>
                    </div>
                </form>
            </div>

            <div class="col-lg-6 col-12 mx-auto mt-5 mt-lg-0 ps-lg-5">
                <iframe class="google-map" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d9139.051711657537!2d-105.25182875554918!3d20.665124450454957!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2smx!4v1713229455175!5m2!1ses-419!2smx" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
